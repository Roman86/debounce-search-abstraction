    "debounce",
    "async",
    "search",
    "input",
    "keypress",
    "keydown",
    "helper",
    "abstraction",
    "lazy",
    "concurrent",
    "typescript",
    "ts"
  ],
  "scripts": {
    "prepublishOnly": "npm run test && npm run build && npm run build && git diff --exit-code --quiet || { echo \"Git working directory is not clean. Please commit or stash your changes.\"; exit 1; }",
