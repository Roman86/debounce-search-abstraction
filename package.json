    "@playwright/test": "^1.45.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
