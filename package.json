    "build": "tsc && vite build",
    "test": "jest",
    "lint": "eslint *.js lib/*",
    "lint:fix": "eslint --fix *.js lib/*"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/debounce-search-abstraction.umd.js",
  "module": "./dist/debounce-search-abstraction.es.js",
  "types": "./dist/lib/main.d.ts",
  "exports": {
    "types": "./dist/lib/main.d.ts",
    "import": "./dist/debounce-search-abstraction.es.js",
    "require": "./dist/debounce-search-abstraction.umd.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roman86/debounce-search-abstraction.git"
  },
